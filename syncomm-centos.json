{
  "builders":
  [
    {
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "1024"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "guest_os_type": "RedHat_64",
      "guest_additions_mode": "disable",
      "headless": false,
      
      "disk_size": 20000,
      "format": "ova",
 
      "iso_url": "http://centos.sonn.com/7/isos/x86_64/CentOS-7-x86_64-Minimal-1708.iso",
      "iso_checksum_url": "http://centos.sonn.com/7/isos/x86_64/sha256sum.txt",
      "iso_checksum_type": "sha256",
 
      "vm_name": "syncomm-centos7",
      "output_directory": "syncomm-centos7-img",
 
      "http_directory": "kickstarts",
      "http_port_min": 10082,
      "http_port_max": 10089,
 
      "boot_wait": "10s",
      "boot_command": [
        "<up><wait><tab><wait> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/syncomm-centos7.ks<enter><wait>"
      ],

      "virtualbox_version_file": "",
      "communicator": "none",
      "shutdown_command": "",
      "shutdown_timeout": "20m"
    }
  ],
  "provisioners": [
      {
        "type": "shell-local",
        "command": "echo sleeping; sleep 1200" 
      }
    ]
}
